<body>
<input type="hidden" id="TenantId" name="TenantId" value="" />

<div class="loginWraper">
	<div id="loginform" class="loginBox">
		<form class="form form-horizontal" action="##" method="post" id="loginform" name="loginform">
            <div class="row cl">
                <label class="form-label col-xs-3">paikey</label>
                <div class="formControls col-xs-8">
                    <input id="keys" name="keys" type="text" placeholder="apikey" class="input-text size-L" value="<?=$res["keys"]?>">
                </div>
            </div>
			<div class="row cl">
				<label class="form-label col-xs-3">秘钥</label>
				<div class="formControls col-xs-8">
					<input id="password" name="password" type="text" placeholder="秘钥" class="input-text size-L" value="<?=$res["password"]?>">
				</div>
			</div>
            <input hidden id="id" name="id" value="<?=$res["id"]?>">
			<div class="row cl">
				<div class="formControls col-xs-8 col-xs-offset-3">
                    <input id="login" name="login" type="button" class="btn btn-success radius size-L" value="&nbsp;提&nbsp;&nbsp;&nbsp;&nbsp;交&nbsp;">
				</div>
			</div>
		</form>
	</div>
</div>

<script type="text/javascript" src="/lib/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" src="/static/h-ui/js/H-ui.js"></script>
<script type="text/javascript">
    $(function(){
        $('#login').click(function(){
            $.ajax({
                url:'/apikey/apikeyEdit/',
                type:'POST',
                // data: $('#loginform').serialize(),
                data:{
					keys:$("#keys").val(),
                    password:$("#password").val(),
                    id:$("#id").val(),
                },
                dataType:'json',
                success:function(msg){
                    if(msg.errno==1){
                        alert(msg.errmsg);
                        var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
                        parent.layer.close(index);  // 关闭layer
                    }else{
                        alert(msg.errmsg);
                    }
                }
            })
        })
    })
</script>

